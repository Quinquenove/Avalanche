@model List<SponsorViewModel>
@{
    ViewData["Title"] = "Sponsor";
}

<a class="btn btn-primary" asp-controller="Misc" asp-action="AddSponsor">Hinzufügen</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sponsor in Model)
        {
            <tr>
                <td>@sponsor.Name</td>
                <td>
                    <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                        <a asp-controller="Misc" asp-action="UpdateSponsor" asp-route-sponsor=@sponsor.Name class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i>
                            Bearbeiten
                        </a>
                        <a asp-controller="Snowboarder" asp-action="DeleteSponsor" asp-route-sponsor=@sponsor.Name class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i>
                            Löschen
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>